[flake8]
max-line-length = 88
# E203: whitespace before ':'
# E501: line too long (handled by black)
# W503: line break before binary operator
# F401: imported but unused (handled by isort)
# W291: trailing whitespace (handled by black)
# C901: function too complex (acceptable for now)
extend-ignore = E203,E501,W503,F401,W291,C901
exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    .mypy_cache,
    build,
    dist,
    *.egg-info,
    venv,
    env,
    .venv,
    .env
per-file-ignores =
    __init__.py:F401
    tests/*:F401,F811
max-complexity = 10
